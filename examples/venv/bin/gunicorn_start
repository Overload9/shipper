#!/bin/bash

NAME="shipper"
DIR=/home/shipper
USER=shipper
GROUP=shipper
WORKERS=3
TIMEOUT=600
BIND=unix:/home/shipper/venv/run/gunicorn.sock
DJANGO_SETTINGS_MODULE=config.settings
DJANGO_WSGI_MODULE=config.wsgi
LOG_LEVEL=error

cd $DIR
source ./venv/bin/activate

export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DIR:$PYTHONPATH

exec ./venv/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $WORKERS \
  --timeout $TIMEOUT \
  --user=$USER \
  --group=$GROUP \
  --bind=$BIND \
  --log-level=$LOG_LEVEL \
  --log-file=-
